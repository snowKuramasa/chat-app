{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "baseUrl": ".", // 絶対パス解決のために必要
    "typeRoots": ["./node_modules/@types", "./src/types"], // カスタム型定義の場所を追加
    "types": ["node", "express"] // 明示的に含める型定義
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
